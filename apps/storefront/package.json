{
	"name": "thega-bigcommerce-storefront-sveltekit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:ORIG": "vite dev",
		"dev": "NODE_ENV='development' bun --env-file=.env --env-file=.env.development -- vite dev --host",
		"build:ORIGL": "vite build",
		"build": "NODE_ENV='production' bun --env-file=.env --env-file=.env.production -- vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"d3": "^7.9.0",
		"lodash-es": "^4.17.21",
		"mathjs": "^15.0.0",
		"tippy.js": "^6.3.7"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^3.1.0",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@iconify/json": "^2.2.399",
		"@iconify/utils": "^3.0.2",
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/node": "^20",
		"@vitest/browser": "^3.2.4",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.55.1",
		"postcss-preset-env": "^10.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.39.5",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.2",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vite-plugin-checker": "^0.11.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	}
}
